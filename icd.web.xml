    <servlet>
      <servlet-name>SurveyLogicServlet</servlet-name>
      <description>
	This servlet records any submitted information, and redirects to 
	the appropriate next page of the survey
      </description>
      <servlet-class>edu.rutgers.comminfo.icd.web.SurveyLogicServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>SurveyLogicServlet</servlet-name>
      <url-pattern>/survey/SurveyLogicServlet</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>QueryServlet</servlet-name>
      <description>
	Process a SQL or JPQL query for data study
      </description>
      <servlet-class>edu.rutgers.comminfo.icd.web.QueryServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>QueryServlet</servlet-name>
      <url-pattern>/tools/QueryServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>ResponseSummaryServlet</servlet-name>
      <description>
	Process a SQL or JPQL query, and adds columns for each response, for data study
      </description>
      <servlet-class>edu.rutgers.comminfo.icd.web.ResponseSummaryServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>ResponseSummaryServlet</servlet-name>
      <url-pattern>/tools/ResponseSummaryServlet</url-pattern>
    </servlet-mapping>


    <servlet>
      <servlet-name>LogoutServlet</servlet-name>
      <description>
	request.getSession().invalidate();
      </description>
      <servlet-class>edu.rutgers.comminfo.icd.web.LogoutServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>LogoutServlet</servlet-name>
      <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <!-- for  "favicon.ico" -->
