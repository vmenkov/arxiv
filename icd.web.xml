<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 

    <description>
      ICD prototype application
    </description>
    <display-name>
      ICD prototype application
    </display-name>


    <taglib>
      <taglib-uri>
	http://comminfo.rutgers.edu/taglibs/icdtags
      </taglib-uri>
      <taglib-location>
	/WEB-INF/icdtags.tld
      </taglib-location>
    </taglib>


    <security-constraint>
      <web-resource-collection>
	<web-resource-name>Everything, including user management</web-resource-name>
	<url-pattern>/*</url-pattern>			
      </web-resource-collection>
      <auth-constraint>
	<role-name>admin</role-name>
     </auth-constraint>
    </security-constraint>

    <security-constraint>
      <web-resource-collection>
	<web-resource-name>Almost everything, except for user management</web-resource-name>
	<url-pattern>*.html</url-pattern>			
	<url-pattern>/index.jsp</url-pattern>			
	<url-pattern>/logout.jsp</url-pattern>			

	<url-pattern>/tools/*</url-pattern>			
	<url-pattern>/survey/*</url-pattern>			

	<url-pattern>/firebug/*</url-pattern>			
	<url-pattern>/images/*</url-pattern>			
	<url-pattern>/scripts/*</url-pattern>			
	<url-pattern>/styles/*</url-pattern>			

      </web-resource-collection>
      <auth-constraint>
	<role-name>admin</role-name>
	<role-name>manager</role-name>
     </auth-constraint>
    </security-constraint>

    <security-constraint>
      <web-resource-collection>
	<web-resource-name>Survey pages only</web-resource-name>
	<url-pattern>/</url-pattern>			

	<url-pattern>/index.jsp</url-pattern>			
	<url-pattern>/logout.jsp</url-pattern>			

	<url-pattern>/manual.html</url-pattern>			

	<url-pattern>/tools/editUserFormSelf.jsp</url-pattern>			
	<url-pattern>/tools/editUserSelf.jsp</url-pattern>			

	<url-pattern>/tools/listRespondents.jsp</url-pattern>			
	<url-pattern>/tools/listCalls.jsp</url-pattern>			
	<url-pattern>/tools/viewCall.jsp</url-pattern>			
	<url-pattern>/tools/showReservations.jsp</url-pattern>			
	<url-pattern>/tools/findEligible.jsp</url-pattern>			
	<url-pattern>/tools/reserveRespondents.jsp</url-pattern>
	<url-pattern>/tools/editRespondentForm.jsp</url-pattern>
	<url-pattern>/tools/addRespondent.jsp</url-pattern>			

	<url-pattern>/survey/*</url-pattern>			

	<url-pattern>/firebug/*</url-pattern>			
	<url-pattern>/images/*</url-pattern>			
	<url-pattern>/scripts/*</url-pattern>			
	<url-pattern>/styles/*</url-pattern>			
      </web-resource-collection>
      <auth-constraint>
	<role-name>admin</role-name>
	<role-name>manager</role-name>
        <role-name>interviewer</role-name>
     </auth-constraint>
    </security-constraint>


    <login-config>  <!-- How should users log in? With BASIC, the
                          browser pops up a window.  The realm-name 
                          is displayed to the user in the login box. -->
      <auth-method>BASIC</auth-method>
      <realm-name>ICD Project</realm-name>
    </login-config>

    <!-- Security roles referenced by this web application -->

    <security-role>
      <description>
	Interviewer can only use survey tools
      </description>
      <role-name>interviewer</role-name>
    </security-role>

    <security-role>
      <description>
	Manager can do everything except for user administration
      </description>
      <role-name>manager</role-name>
    </security-role>

    <security-role>
      <description>
	Admin can do anything, including user administration
      </description>
      <role-name>admin</role-name>
    </security-role>


